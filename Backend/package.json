{
  "name": "medical-consultation-backend",
  "version": "1.0.0",
  "description": "Web-Consultation-Assistant后端系统",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "docker:build": "docker build -t medical-consultation-api .",
    "docker:run": "docker run -p 3001:3001 medical-consultation-api",
    "docker:compose": "docker-compose up -d",
    "docker:stop": "docker-compose down",
    "deploy": "chmod +x deploy.sh && ./deploy.sh",
    "db:init": "mysql -u root -p < database/init.sql",
    "logs": "pm2 logs medical-consultation-api"
  },
  "keywords": ["medical", "consultation", "backend", "mysql"],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "express": "^4.18.2",
    "mysql2": "^3.6.5",
    "cors": "^2.8.5",
    "body-parser": "^1.20.2",
    "dotenv": "^16.3.1",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2"
  },
  "devDependencies": {
    "nodemon": "^3.0.2"
  }
}
